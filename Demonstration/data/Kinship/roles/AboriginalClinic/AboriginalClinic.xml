    <ActionTendency action="ExpressHappiness()">
        <Preconditions>
            <MoodCondition operator="GreaterEqual" value="2.0"/>
        </Preconditions>
        <ElicitingEmotion type="Joy" minIntensity="3">
            <CauseEvent />
        </ElicitingEmotion>
    </ActionTendency>

		
		<ActionTendency action="ExpressSadness()">
			<Preconditions>
            </Preconditions>
			<ElicitingEmotion type="Distress" minIntensity="1">
