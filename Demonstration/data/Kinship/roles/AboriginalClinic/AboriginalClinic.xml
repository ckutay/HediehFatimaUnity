		<!-- It is undesirable to get an unwanted role -->
		<EmotionalReaction desirability="-3" praiseworthiness="0">
			<Event action="Say" target="SELF" parameters="school"/>
		</EmotionalReaction>
				
        <!-- It is undesirable to see someone get this characters' desired role -->
		<EmotionalReaction desirability="-3" desirabilityForOther="9" praiseworthiness="0">
			<Event action="Say" parameters="clinic"/>
